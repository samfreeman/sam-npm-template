{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es6",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./built",
        "sourceMap": true,
        "declaration": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts",
        "src/coverage",
        "src/test-results",
        "**/tests/*"
    ]
}
